# Environment Configuration for Web Scraping & Clustering Tool

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Service URLs (for development)
QDRANT_URL=http://qdrant:6333
OLLAMA_URL=http://ollama:11434

# Qdrant Configuration
QDRANT_API_KEY=
QDRANT_COLLECTION_SIZE=384

# Ollama Configuration - Latest 2024 Models
# Available LLM models (choose one):
# üöÄ LATEST & RECOMMENDED:
# - qwen3:1.7b (ultra-efficient with thinking mode, ~1.1GB) ‚≠ê LOW RESOURCE
# - phi4:3.8b (Microsoft's latest SLM, 128K context, ~2.3GB) ‚≠ê GPU OPTIMIZED
# - gemma3n:e4b (Google multimodal: text/image/audio, ~2.2GB) ‚≠ê BALANCED
# - qwen3:4b (strong reasoning and coding, ~2.5GB)
# - qwen3:8b (balanced performance, multilingual, ~4.7GB)
# 
# üìö LEGACY MODELS (still good):
# - llama3.2:3b (fast, good quality, ~2GB)
# - llama3.2:1b (fastest, basic quality, ~1.3GB)
# - mistral:7b (good balance, ~4.1GB)
# - codellama:7b (Meta, code-focused, ~3.8GB)
OLLAMA_MODEL=gemma3n:e4b

# Available embedding models (choose one):
# - nomic-embed-text (best general purpose, ~274MB) ‚≠ê RECOMMENDED
# - all-minilm (sentence-transformers compatible, ~90MB)
# - mxbai-embed-large (highest quality, ~669MB)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Authentication Service
AUTH_MASTER_KEY=your-secure-master-key-here
AUTH_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Scraping Configuration
SCRAPING_DELAY=1.0
MAX_PAGES_PER_DOMAIN=100
RESPECT_ROBOTS_TXT=true
USER_AGENT=WebScrapingClusteringTool/1.0

# Clustering Configuration
CLUSTERING_MIN_SIZE=5
CLUSTERING_MIN_SAMPLES=3
UMAP_N_NEIGHBORS=15
UMAP_MIN_DIST=0.1

# Export Configuration
NOTION_API_KEY=
NOTION_DATABASE_ID=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=true